<%= form_with(url: add_labour_technician_path, method: :put, class: 'needs-validation') do |form| %>
  <% if @technician_labour.present? %>
    <% @technician_labour.errors.full_messages.each do |message| %>
        <div class="alert alert-danger">
          <%= message %>
        </div>
    <% end %>
  <% end %>

  <%= form.hidden_field :id, value: @technician.id %>

  <div class="mb-3">
    <%= form.label :labour_id, 'Seleccionar labor:', class: 'form-label' %>
    <%= form.collection_select :labour_id, Labour.by_skills(@technician.skills.pluck(:id)), :id, :title, { prompt: 'Selecciona una labor' }, { class: 'form-select' } %>
  </div>

  <div class="mb-3">
    <%= form.label :duration, 'DuraciÃ³n en Horas:', class: 'form-label' %>
    <%= form.number_field :duration, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :price, 'Price:', class: 'form-label' %>
    <%= form.number_field :price, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.submit 'Agregar', class: 'btn btn-primary' %>
  </div>
<% end %>
