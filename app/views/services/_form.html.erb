<%= form_with(model: @service, local: true , class: 'needs-validation') do |form| %>
  <% @service.errors.full_messages.each do |message| %>
    <div class="alert alert-danger">
      <%= message %>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :client_id, 'Seleccionar Cliente', class: 'form-label' %> <br>
    <%= form.collection_select :client_id, Client.all, :id, :name, {prompt: 'Seleccione un cliente'}, class: "form-select" %>
  </div>

  <div class="mb-3">
    <%= form.label :technician_id, 'Seleccionar Técnico', class: 'form-label' %>
    <%= form.collection_select :technician_id, Technician.all, :id, :name, {prompt: 'Seleccione un técnico'}, class: "form-select" %>
  </div>

  <div class="mb-3">
    <%= form.label :description, 'Descripción' %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :initial_date, 'Fecha de Inicio' %>
    <%= form.date_field :initial_date, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :end_date, 'Fecha de Fin' %>
    <%= form.date_field :end_date, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.submit 'Guardar', class: "btn btn-primary" %>
  </div>
<% end %>
