<%= form_with(model: @service_labour, url: add_labour_service_path, method: :put) do |form| %>
  <% @service_labour.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
  <% end %>

  <%= form.hidden_field :service_id, value: @service.id %>

  <div class="mb-3">
    <%= form.label :labour_id, 'Seleccionar Labor:', class: 'form-label' %> <br>
    <%= form.collection_select :labour_id, @service.technician.labours, :id, lambda { |labour| labour.title }, {prompt: 'Seleccione una labor'}, class: 'form-select' %>
  </div>

  <div class="mb-3">
    <%= form.label :duration, 'Duración:', class: 'form-label' %>
    <%= form.number_field :duration, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :description, 'Descripción:', class: 'form-label' %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.submit 'Agregar', class: 'btn btn-primary' %>
  </div>
<% end %>