<h1 class="text-center mb-4">Lista de Usuarios</h1>

<div class="container">
  <div class="table-responsive">
    <table class="table table-bordered table-striped table-hover">
      <thead class="table-dark">
        <tr>
          <th>ID</th>
          <th>Email</th>
          <th>Role</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td><%= user.email %></td>
            <td><%= user.role %></td>
            <td>
              <%= link_to 'Eliminar', user_path(user), data: {
                turbo_method: :delete,
                turbo_confirm: '¿Estás seguro?'
                }, class: "btn btn-danger me-2"%>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>