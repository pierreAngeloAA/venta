<div class="container">
  <h1 class="text-center mb-4">Lista de Clientes</h1>
  <%= render partial: 'shared/back_button', locals: { back_path: root_path, class_name: "btn btn-outline-dark" } %> 
  <%= link_to 'Nuevo Ciente', new_client_path, class: 'btn btn-primary mb-3'  %>
  
  <div class="table-responsive">
    <table class="table table-bordered table-striped table-hover">
      <thead class="table-dark">
        <tr>
          <th>Id</th>
          <th>Nombre</th>
          <th>Email</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% @clients.each do |client| %>
          <tr>
            <td><%= client.id %></td>
            <td> <%= link_to client.name, client_path(client) , class: 'btn btn-info mb-3'%></td>
            <td><%= client.email %></td>
            <td>
              <%= link_to 'Editar', edit_client_path(client), class: "btn btn-primary me-2" %>
              <%= link_to 'Eliminar', client_path(client), data: {
                turbo_method: :delete,
                turbo_confirm: '¿Estás seguro?'
                }, class: "btn btn-danger me-2"%>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>