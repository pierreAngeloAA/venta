<% if user_signed_in? %>
  <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
    <div class="container-fluid">
      <%= link_to 'VENTA', root_path, class: 'navbar-brand' %>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto">
            <% case current_user&.role %>
              <% when 'client' %>
                <li class="nav-item">
                  <%= link_to 'Perfil', client_path(current_user.client), class: 'nav-link' %>
                </li>
              <% when 'technician' %>
                <li class="nav-item">
                  <%= link_to 'Perfil', technician_path(current_user.technician), class: 'nav-link' %>
                </li>
            <% end %>
            <li class="nav-item">
              <%= link_to 'Cerrar sesión', destroy_user_session_path, method: :delete, class: 'nav-link', data: { turbo_confirm: '¿Estás seguro?', turbo_method: :delete } %>
            </li>
          </ul>
        </div>
    </div>
  </nav>
<% end %>
<hr>
