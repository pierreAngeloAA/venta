<%= link_to 'Home', root_path %>

<%= link_to 'Back', request.referer if action_name == 'show' || action_name == 'new' || action_name == 'edit' %>

<% case current_user&.role %>
  <% when 'client' %>
    <%= link_to 'Perfil', client_path(current_user.client) %>
  <% when 'technician' %>
    <%= link_to 'Perfil', technician_path(current_user.technician) %>
<% end %>

<% if user_signed_in? %>
  <%= link_to 'Cerrar sesión', destroy_user_session_path, data: {
    turbo_method: :delete,
    turbo_confirm: '¿Estás seguro?'
    } 
  %>
<% end %>